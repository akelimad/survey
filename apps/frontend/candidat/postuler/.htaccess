<IfModule mod_rewrite.c>
RewriteEngine on

# 1-level
RewriteRule ^home/{0,1}$  ?id_offre=$1 [QSA,L]
RewriteRule ^post/(.+)$ ?id_offre=$1 [QSA,L]



# all other cases
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule .+ - [L]
RewriteRule ^([^/]+)/{0,1}$ ?id_offre=$1 [QSA,L]

</IfModule>